# FastAPI Backend Environment Variables
# Copy this to .env and fill in your values
# Most values are inherited from the main project .env file

# =====================================
# INHERITED FROM MAIN PROJECT (.env)
# =====================================
# These are automatically loaded from ../env:
# NEXT_PUBLIC_SUPABASE_URL=https://sxzrdqkbjdnrxuhjqxub.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_key
# GEMINI_API_KEY=your_gemini_key
# NEXT_PUBLIC_SITE_URL=https://upsc-kappa.vercel.app
# RAZORPAY_KEY_ID=your_razorpay_key (optional)
# RAZORPAY_KEY_SECRET=your_razorpay_secret (optional)
# NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token (optional)

# =====================================
# FASTAPI-SPECIFIC VARIABLES
# =====================================

# API Authentication
FASTAPI_API_KEY=upsc_backend_secure_key_2025_production

# Environment
NODE_ENV=production

# Server Configuration (Railway will override PORT)
HOST=0.0.0.0
PORT=8000

# Content Processing
MAX_ARTICLES_PER_SOURCE=25
MIN_UPSC_RELEVANCE=40

# Scraping Configuration
SCRAPING_DELAY_SECONDS=2.0
REQUEST_TIMEOUT_SECONDS=30

# Database
MAX_DATABASE_CONNECTIONS=10

# Logging
LOG_LEVEL=INFO

# =====================================
# PLAYWRIGHT SESSION CONFIGURATION
# =====================================

# The Hindu login credentials (for authenticated article scraping)
HINDU_EMAIL=your_hindu_email@example.com
HINDU_PASSWORD=your_hindu_password

# Indian Express login credentials (for authenticated article scraping)
IE_EMAIL=your_ie_email@example.com
IE_PASSWORD=your_ie_password

# Playwright browser session settings
PLAYWRIGHT_COOKIE_DIR=/data/cookies/
PLAYWRIGHT_HEADLESS=true

# =====================================
# CRON AUTHENTICATION
# =====================================

# Secret for cron job authentication (Bearer token)
CRON_SECRET=your_secure_cron_secret_here

# =====================================
# PIPELINE THRESHOLDS
# =====================================

# Minimum UPSC relevance score (0-100) for articles to pass the pipeline
# Default: 40 (set via RELEVANCE_THRESHOLD env var if overriding)
# RELEVANCE_THRESHOLD=40